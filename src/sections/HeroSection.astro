---
import Subscribe from "../components/Subscribe.astro";
---

<div class="hero-section">
    <div class="hero-section-container">
        <div class="hero-left">
            <p class="hero-subtitle">Want to become a top 1% investor?</p>
            <p class="hero-second-subtitle inter">
                Join thousands of readers of Joe's Accredited Insights for tips,
                strategies, and resources to become a steward of your own
                capital.
            </p>
        </div>

        <div class="vertical-line">&nbsp;</div>

        <div class="hero-right">
            <p class="start">Start Here</p>
            <Subscribe />
        </div>
    </div>
</div>

<style>
    .hero-section {
        background-color: #f2f4f8;
        padding: 1rem 1rem;
        text-align: center;
    }

    .hero-section-container {
        max-width: 1260px;
        margin: 0 auto;
    }

    .hero-subtitle {
        color: #212832;
        font-weight: bold;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        line-height: 2.25rem;
    }

    .hero-second-subtitle {
        font-size: 1.125rem;
        line-height: 2rem;
        font-weight: 300;
    }

    .start {
        font-size: 2.25rem;
        line-height: 3rem;
        margin: 0.5rem 0;
    }

    .vertical-line{
        display: none;
    }

    @media only screen and (min-width: 600px) {
        .hero-section-container {
            display: flex;
            gap: 24px;
            padding: 2rem;
            text-align: left;
        }

        .hero-left {
            flex: 1;
            text-align: left;
            align-self: center;
        }

        .vertical-line {
            display: block;
            width: 1px;
            background-color: #dbe2eb;
        }

        .hero-right {
            flex: 1;
        }
    }

    @media only screen and (min-width: 990px) {
        .hero-section-container {
            padding: 2rem 0;
            gap: 4rem;
        }

        .start {
            font-size: 3rem;
            line-height: 4rem;
        }
    }
</style>
