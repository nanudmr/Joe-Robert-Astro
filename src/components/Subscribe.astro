---
import { gsap } from "gsap";
---

<div class="subscribe">
    <form>
        <input type="email" placeholder="Drop email to gain access" required />
        <button>Subscribe</button>
    </form>
</div>

<style>
    form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    form input,
    button {
        text-align: center;
        height: 52px;
        font-size: 1.125rem;
        border: none;
        border-radius: 0.25rem;
    }

    form input {
        border: 1px solid #dbe2eb;
        padding-left: 1.5rem;
        text-align: left;
    }

    form button {
        background-color: #3c1fbf;
        color: #fefefe;
    }

    form input::placeholder {
        color: #a9b2bf;
        font-style: italic;
    }

    @media only screen and (min-width: 990px) {
        form {
            flex-direction: row;
        }

        form input {
            width: 100%;
        }

        form button {
            padding: 0.75rem 1.5rem;
        }
    }
</style>

